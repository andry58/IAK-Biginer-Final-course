        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"

            app:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="wrap_content"
